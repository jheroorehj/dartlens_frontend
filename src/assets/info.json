{
  "version": "0.1.0",
  "updated_at": "2025-11-05",
  "overview": {
    "purpose": "공시 기반 재무 인사이트 제공",
    "audience": "상장사 모니터링이 필요한 실무자",
    "scope": {
      "listing": "상장사 중심",
      "years": 5,
      "fs_priority": ["CFS", "OFS"],
      "reprt_priority": ["11014", "11013", "11012", "11011"]
    }
  },
  "data_sources": {
    "opendart": {
      "used_items": [
        "매출",
        "영업이익",
        "순이익",
        "자산",
        "부채",
        "자본",
        "현금흐름(확대 예정)"
      ],
      "excluded": ["실시간 주가", "시가총액"],
      "refresh_policy": {
        "manual_sync": "버튼 클릭 시 수집·업서트",
        "auto_sync": "ON 시 추가 즉시 동기화",
        "cache_ttl_hours": 24
      }
    }
  },
  "metrics": {
    "definitions": [
      { "name": "영업이익률", "formula": "영업이익 ÷ 매출 × 100", "unit": "%" },
      { "name": "순이익률", "formula": "순이익 ÷ 매출 × 100", "unit": "%" },
      { "name": "부채비율", "formula": "총부채 ÷ 자기자본 × 100", "unit": "%" },
      { "name": "유보율", "formula": "이익잉여금 ÷ 자기자본 × 100", "unit": "%" },
      { "name": "ROA(예정)", "formula": "순이익 ÷ 총자산 × 100", "unit": "%" },
      { "name": "잉여현금흐름(예정)", "formula": "영업CF − 투자CF", "unit": "원" }
    ],
    "thresholds": {
      "영업이익률": { "good": "≥10", "warn": "5~10", "bad": "<5" },
      "순이익률": { "good": "≥8", "warn": "3~8", "bad": "<3" },
      "부채비율": { "std": "≤100", "ok": "100~200", "warn": "200~300", "risk": ">300" },
      "유보율": { "good": "≥200", "ok": "100~200", "weak": "<100" }
    }
  },
  "report_priority": {
    "reprt_code": ["11014", "11013", "11012", "11011"],
    "fs_div": ["CFS", "OFS"]
  },
  "missing_value_policy": {
    "division_by_zero": "지표 미표시(null)",
    "negative_equity": "지표 계산 제외",
    "fallback_accounts": "대체 계정 매핑 시도",
    "rendering": { "null_display": "—", "badge_color": "gray" }
  },
  "interpretation": {
    "flow": "매출 증가 → 이익률 개선 → 유보율 확대 → 부채 축소 → 재무 안정성 상승",
    "color_rules": {
      "positive": "green",
      "warning": "yellow",
      "risk": "red",
      "standard": "blue"
    }
  },
  "sync_policy": {
    "auto": {
      "behavior": "위시리스트 추가 시 즉시 수집",
      "status_text": { "busy": "자동 동기화 진행 중", "done": "자동 동기화 완료", "idle": "자동 동기화 대기" }
    },
    "manual": {
      "button_visible": true,
      "action": "클릭 시 선택 기업 일괄 동기화"
    },
    "retry": { "max_attempts": 2, "backoff_seconds": 5 },
    "logging": { "collect": ["요청 수", "성공/실패 수", "실패 사유 샘플"] }
  },
  "limitations": [
    "공시 지연/정정으로 시점별 수치가 변동될 수 있음",
    "양식 차이로 일부 계정 매핑 누락 가능",
    "투자 판단은 이용자 책임"
  ],
  "privacy": {
    "cookies": "세션 유지 목적 최소 사용",
    "account_data": "필수 인증 정보만 저장",
    "deletion": "설정 > 계정 삭제 기능 제공"
  },
  "changelog": [
